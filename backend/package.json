{
  "name": "xrpl-payment-system",
  "version": "1.0.0",
  "description": "XRPL Payment System for Hackathon",
  "main": "src/server.js",
  "apidoc": {
    "name": "XRPL Hackathon API",
    "version": "1.0.0",
    "description": "XRPL 기반 해커톤 프로젝트 API 문서",
    "title": "XRPL Hackathon API Documentation",
    "url": "http://localhost:3000"
  },
  "scripts": {
    "start": "npm run docs:generate && node src/server.js",
    "dev": "npm run docs:generate && nodemon src/server.js",
    "test": "jest",
    "docs:generate": "apidoc -i src/routes -o apidoc",
    "docs:watch": "apidoc -i src/routes -o apidoc && nodemon --watch src/routes --ext js --exec \"apidoc -i src/routes -o apidoc\"",
    "docs:serve": "npm run docs:generate && http-server apidoc -p 8080"
  },
  "keywords": [
    "xrpl",
    "payment",
    "blockchain",
    "express",
    "apidoc"
  ],
  "author": "Hackathon Team",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "node-fetch": "^3.3.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "xrpl": "^2.14.0"
  },
  "devDependencies": {
    "apidoc": "^0.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "http-server": "^14.1.1"
  }
}